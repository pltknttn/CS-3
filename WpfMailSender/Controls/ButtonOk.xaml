<Button x:Class="WpfMailSender.Controls.ButtonOk"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMailSender.Controls"
        mc:Ignorable="d" 
        Width="90" Height="30"
        VerticalContentAlignment="Center">
    <Button.Style>
        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}"/>
    </Button.Style>
    <DockPanel LastChildFill="True" FlowDirection="LeftToRight">        
        <Image Source="pack://application:,,,/WpfMailSender;component/Images/ok.png" Stretch="Uniform" DockPanel.Dock="Left"/>
        <Label VerticalContentAlignment="Center" Margin="5" HorizontalContentAlignment="Center" >ОК</Label>
    </DockPanel>
</Button>
