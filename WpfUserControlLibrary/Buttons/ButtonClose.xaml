<Button x:Class="WpfUserControlLibrary.Buttons.ButtonClose"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfUserControlLibrary.Buttons"
        mc:Ignorable="d" Width="120" Height="30"
        VerticalContentAlignment="Center"
        Click="Button_Click"
        >
    <Button.Style>
        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}"/>
    </Button.Style>
    <DockPanel LastChildFill="True"  FlowDirection="LeftToRight">
        <Image Source="pack://application:,,,/WpfUserControlLibrary;component/Images/shutdown.png" Stretch="Uniform" DockPanel.Dock="Left"/>
        <Label VerticalContentAlignment="Center" Margin="5,0" HorizontalAlignment="Center">Завершить</Label>
    </DockPanel>
</Button>
